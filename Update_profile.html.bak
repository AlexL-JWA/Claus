	<script>
    var hideBlock = 1
        
//    $(document).ready(function(){
       $('body').on('click', '.checkboxs', function(){
           if ($(this).find("input[type='checkbox']").prop('checked') === true){
               $(this).addClass('active');
               hideBlock = 1;
           }else{
               $(this).removeClass('active'); 
               hideBlock = 0;
           }
       
          
       });
//    });
    </script>
