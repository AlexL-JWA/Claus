<section class="ndra-container">
    <div class="wrapper form-edit my-profil my-profil-2">
        <div class="container">
            <div class="row">
               	<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 col-profil">
               		<h3 data-toggle="modal" data-target=".bs-example-modal-lg"><i class="icon-teacher"></i>My Profile</h3>
               		<div class="button-block-top">
               			<a href="#" class="button button-top" data-toggle="modal" data-target=".password">Change Password</a>
               		</div>
               	</div>
               	<form action="#">
                <div class="col-lg-12 right-block">
                <div class="row">
                <div class="profil-2">
                	<input type="text" placeholder="Peter" class="edit-input">
				    <a href="#" class="edit"><i class="icon-pencils"></i></a>
                	<input type="text" placeholder="Patrik" >
                	<input type="text" placeholder="23">
                	<input type="text" placeholder="Nikolejs Plads 77">
                	<input type="text" placeholder="1465">
