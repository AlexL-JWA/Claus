<div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" data-aria-labelledby="myLargeModalLabel" data-aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
     <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" data-aria-hidden="true">&times;</button>
        <h4 class="modal-title">Your profile portrait</h4>
      </div>
		<form action="#" method="post" enctype="multipart/form-data" id="dragarea">
			<p class="upload">
				<label>
					<input type="file" name="images" accept="image/*; capture=camera" title="#" id="inputFile" />
					<span id="preview" class="button"></span>
				</label>
			</p>
		</form>
   			<a href="#" class="button">Attach Picture</a>
   		<div class="right-button">
   			<a href="#" class="button">Save</a>
   			<a href="#" class="button gray">Cancel</a>
   		</div>
    </div>
  </div>
</div>




<div class="modal fade password" tabindex="-1" role="dialog" data-aria-labelledby="myLargeModalLabel" data-aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
     <div class="modal-header">
        <h4 class="modal-title">Change Password</h4>
      </div>
      <form action="#">
      	<h5 class="error">ERROR MASSAGE!</h5>
      	<input type="password" placeholder="Old Password" required>
      	<input type="password" placeholder="New Password" required>
      	<input type="password" placeholder="Repeat Password" required>
      </form>
		<div class="center-button">
			<a href="#" class="button" data-toggle="modal" data-target=".password-upd"  data-dismiss="modal" data-aria-hidden="true">Update Password</a>
			<a href="#" class="button gray" data-dismiss="modal" data-aria-hidden="true">Cancel</a>
		</div>
    </div>
  </div>
</div>



<div class="modal fade password-upd" tabindex="-1" role="dialog" data-aria-labelledby="myLargeModalLabel" data-aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <p>Password is updated successfully</p>
      <a href="#" class="button"  data-dismiss="modal" data-aria-hidden="true">OK</a>
    </div>
  </div>
</div>

<div class="modal fade profile-upd" tabindex="-1" data-role="dialog" data-aria-labelledby="myLargeModalLabel" data-aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <p>Your profile is updated successfully</p>
      <a href="#" class="button" data-dismiss="modal" data-aria-hidden="true">OK</a>
    </div>
  </div>
</div>





<div class="modal fade contact-form" tabindex="-1" role="dialog" data-aria-labelledby="myLargeModalLabel" data-aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
     <div class="modal-header">
        <h4 class="modal-title">Contact Form</h4> 
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      </div>
      <form action="#">
      	<label for="#">First name</label>
      	<input type="text">
      	<label for="#">Second name</label>
      	<input type="text">
      	<label for="#">E-mail</label>
      	<input type="email">
      	<label for="#">Subject</label>
      	<input type="text">
      	<label for="#">Message</label>
      	<textarea></textarea>
      	
      	<div class="captcha">
            <img src="img/captcha.jpg" alt="captcha">
        </div>
      </form>
		<div class="center-button">
			<a href="#" class="button" data-toggle="modal" data-target=".thanks"  data-dismiss="modal" data-aria-hidden="true">Submit</a>
			<a href="#" class="button gray" data-dismiss="modal" data-aria-hidden="true">Cancel</a>
		</div>
    </div>
  </div>
</div>



<div class="modal fade thanks" tabindex="-1" role="dialog" data-aria-labelledby="myLargeModalLabel" data-aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <p>Thanks for contacting us. We will get back to you within 24 hours</p>
      <a href="#" class="button"  data-dismiss="modal" data-aria-hidden="true">OK</a>
    </div>
  </div>
</div>
